{
  "name": "batch-job-service:infra-shared",
  "tags": [
    "build-type:cdk",
    "batch-job-service",
    "infra-shared"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm build",
        "cwd": "{workspaceRoot}/{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo '{projectName} tests are running...' && pnpm test",
        "cwd": "{workspaceRoot}/{projectRoot}"
      }
    }
  }
}